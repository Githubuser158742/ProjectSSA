@model PMOrganisationRegister
<h2>Kassa Toevoegen aan @ViewBag.Organisation.OrganisationName:@ViewBag.Organisation.Login</h2>
@using (Html.BeginForm("NewRegister", "Organisation", FormMethod.Post))
{
    @Html.HiddenFor(a => a.OrganisationID)
    <table class="form">
        <tr>
            <td>@Html.LabelFor(a => a.RegisterID)</td>
            <td>@Html.DropDownListFor(a => a.RegisterID, Model.NewRegister)</td>
            <td>@Html.ValidationMessageFor(a => a.RegisterID)</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(a => a.FromDate)</td>
            <td><input type="date" value="@DateTime.Today" id="FromDate" name="FromDate" min="@DateTime.Today.Year-@DateTime.Today.Month-@DateTime.Today.Day" /></td>
            <td><input type="time" value="@DateTime.Today" id="FromTime" name="FromTime" /></td>
        </tr>
        <tr>
            <td>@Html.LabelFor(a => a.UntilDate)</td>
            <td><input type="date" value="@DateTime.Today" id="UntilDate" name="UntilDate" min="@DateTime.Today.Year-@DateTime.Today.Month-@DateTime.Today.Day" /></td>
            <td><input type="time" value="@DateTime.Today" id="UntilTime" name="UntilTime" /></td>
        </tr>
        <tr>
            <td><input type="submit" value="Toevoegen" /></td>
            <td>
                <a href="/Organisation/Register?id=@Html.DisplayFor(a => a.OrganisationID)">
                    <input class="inputWidth" type="button" value="Keer Terug" />
                </a>
            </td>
        </tr>
    </table>
}
